extends layout


block content
  table(class='gridtable shade')
    tr
      th Id
      th Name
      th Age
      th Favorite Type of Pollution
      th Favorite Food
      th Favorite Pet
      th
      th
    each item in people
      tr
        td
          a(href='/details/' + item.id) #{item.id}
        td #{item.userName}
        td #{item.age}
        td #{item.q1}
        td #{item.q2}
        td #{item.q3}
        td
          a(href='/edit/' + item.id) Edit
        td
          a(href='/delete/' + item.id) Delete
    tr
      td 
        a(href='/create') Add new person